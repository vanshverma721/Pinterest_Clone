<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] h-[85vh] bg-white px-20 py-5 rounded-lg shadow-2xl">
      <div class="flex justify-center">
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
          class="w-12 h-12" />
      </div>
      <h1 class="text-3xl mt-2 mb-3 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">
        Welcome to Pinterest</h1>
      <form action="">
        <label for="username">Email address</label>
        <input class="block border-2 rounded-lg mb-2 w-full px-3 py-2" type="text" name="username" placeholder="Email">
        <label for="password">Password</label>
        <input class="block border-2 rounded-lg mb-5 w-full px-3 py-2" type="password" name="password"
          placeholder="Password">
        <input class="block border-2  mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit">
      </form>
      <p class="font-semibold text-1xl mt-2 text-center">OR</p>
      <button class="btn fbk">
        <i
          class="fab fa-facebook fa-lg"
          style="color: white; padding-right: 10px"
        ></i
        ><a href="#">Continue with Facebook</a></button
      >
      <button class="btn ggl">
        <i
          class="fab fa-google"
          style="color: rgb(11, 241, 22); padding-right: 10px"
        ></i
        ><a href="#">Continue with Google</a>
      </button>
      <footer>
        <p class="text-center">
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <p class="text-center">Not on Pinterest yet? Sign up</p>
      </footer>
    </div>
  </div>

<% include ./partials/footer.ejs %>